datasource db {
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String       @id @default(cuid())
  email          String       @unique
  name           String?
  password       String
  role           String       @default("USER")
  profilePicture String?
  displayName    String?
  bannerImage    String?
  bio            String?
  banned         Boolean      @default(false)
  createdAt      DateTime     @default(now())
  comments       Comment[]
  clips          Clip[]
  adminLogs      AdminLog[]
  banInfo        UserBan?

  @@map("users")
}

model Clip {
  id           String    @id @default(cuid())
  title        String
  thumbnailUrl String
  fileUrl      String
  fileName     String
  tags         String    @default("")
  fileSize     Int       @default(0)
  userId       String?
  uploadDate   DateTime  @default(now())
  featured     Boolean   @default(false)
  user         User?     @relation(fields: [userId], references: [id])
  comments     Comment[]

  @@map("clips")
}

model Comment {
  id        String   @id @default(cuid())
  clipId    String
  userId    String
  content   String
  createdAt DateTime @default(now())
  clip      Clip     @relation(fields: [clipId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("comments")
}

model AdminLog {
  id        String   @id @default(cuid())
  adminId   String
  action    String
  details   String?
  timestamp DateTime @default(now())
  admin     User     @relation(fields: [adminId], references: [id])

  @@map("admin_logs")
}

model UserBan {
  id        String   @id @default(cuid())
  userId    String   @unique
  reason    String
  adminId   String
  timestamp DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@map("user_bans")
}

model FeaturedClip {
  id         String   @id @default(cuid())
  clipId     String   @unique
  assignedAt DateTime @default(now())

  @@map("featured_clips")
}
